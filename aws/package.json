{
  "name": "text-to-shirt-aws",
  "version": "1.0.0",
  "description": "API for text-to-shirt in AWS",
  "scripts": {
    "postinstall": "(cd lambdas && npm install);",
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "deploy": "tsc & cdk deploy --all --outputs-file ./cdk-outputs.json --profile juju && cp -f cdk-outputs.json ../cdk-outputs.json && cd ../ && ./update-secret.sh"
  },
