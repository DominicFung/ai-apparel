  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.7.6",
    "@types/uuid": "^8.3.4",
    "esbuild": "^0.15.4",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.37.1"
  }
}